#!/bin/bash

# mardi 29 aoÃ»t 2017, 13:54:59 (UTC+0200)

# set -x

function showHelp {
	echo ""
	echo "Repeat a command n times."
	echo "Example: loop 100 'echo HeyHey!'"
	echo ""
}

if [[ -z "$1" ]] ; then
	echo "You must specify a number"
	showHelp
	exit 1
fi

if [[ -z "$2" ]] ; then
	echo "You must specify a command"
	showHelp
	exit 1
fi

if ! [[ -z "$3" ]] ; then
	LOG_FILE="$3"
	echo "Output is piped to '$LOG_FILE' ..."
fi

echo "Working directory: $PWD"

for i in $(seq $1); do
	
	echo ""
	echo "================ Sequence $i / $1 ================"
	echo ""

	if ! [[ -z "$LOG_FILE" ]] ; then
		$2 > >(tee -a $LOG_FILE) 2> >(tee -a $LOG_FILE >&2)
	else
		$2
	fi

done


#!/bin/bash

export PATH="$PATH:/home/remipassmoilesel/linux-utils/"
export PATH="$PATH:/home/remipassmoilesel/linux-utils/notes/"
export PATH="$PATH:/home/remipassmoilesel/linux-utils/memo/"
export PATH="$PATH:/home/remipassmoilesel/linux-utils/linux-rapid-install/"

if [ -f ~/.custom-rc ]; then
    echo "Sourcing $0 ..."
    source ~/.custom-rc
fi

# default editor
export EDITOR=vim

# history format and behavior
export HISTTIMEFORMAT='%d %H:%M '
PROMPT_COMMAND='history -a'

#Â inclure le path courant dans la commande sudo
# alias sudo='sudo env PATH=$PATH '

# better git log with 'git lg'
git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# woooo !
cmatrix -b  -C blue


#!/bin/bash

export PATH="$PATH:/home/$USER/linux-utils/"
export PATH="$PATH:/home/$USER/linux-utils/notes/"
export PATH="$PATH:/home/$USER/linux-utils/memo/"
export PATH="$PATH:/home/$USER/linux-utils/linux-rapid-install/"
export PATH="$PATH:/home/$USER/bin/"

# default editor
export EDITOR=vim

# history format and behavior
export HISTTIMEFORMAT='%d %H:%M '
PROMPT_COMMAND='history -a'

#Â inclure le path courant dans la commande sudo
# alias sudo='sudo env PATH=$PATH '

# better git log with 'git lg'
git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

if [ -f ~/.custom-rc ]; then
    echo "Sourcing /home/$USER/.custom-rc"
    source /home/$USER/.custom-rc
fi

if [ -f /usr/share/bm/bm.bash ]; then
    source /usr/share/bm/bm.bash
    alias cm="cdbm $@"
fi

alias kubesys="kubectl -n kube-system $@"
alias ks="kubectl -n kube-system $@"
alias kc="kubectl $@"
alias watch-all-pods="watch -n 0,5 kubectl get pods --all-namespaces"
alias watch-sys-pods="watch -n 0,5 kubectl get pods -n kube-system"
alias watch-pods="watch -n 0,5 kubectl get pods -n $1"

# woooo !
cmatrix -b  -C blue

